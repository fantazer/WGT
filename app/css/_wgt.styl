//popups
#lsp-block-popup
	.lsp-popup-placeholder
		background: $dark
		width: 100%;
		height: 100%;
		position: fixed;
		top: 0;
		left: 0;
		z-index: 999;
		cursor: pointer;
		opacity: .8
	h1
		@extend .type--xl
		color black
		margin-top: 0
		margin-bottom: 20px
	.lsp-popup-cont
		position: absolute;
		top: 150px;
		width: 450px
		background: #FFF;
		z-index: 1000;
		left: 50%;
		transform translateX(-50%)
		padding: 30px 20px
		box-shadow: 0 16px 24px rgba(0, 0, 0, 0.16);
		border-radius 10px
	.lsp-popup-cross
		background: url("/img/close-fat.svg") no-repeat center center transparent;
		width: 19px;
		height: 19px;
		position: absolute;
		top: -40px
		right: 0
		cursor: pointer;


.jstore-tag
	.lsp-form
		font-size: 13px;
		margin: 0 0 20px 0;
		.label-row
			display: block;
			margin-bottom: 20px
		.label-row-text
			@extend .type--lg
			font-size: 14px
			color black
			margin-bottom: 10px
			display: inline-block
		.label-row-field
			input
				@extend .input
				width: 100%
			a.jstore-tag
				text-decoration: underline
				color rgba(0, 0, 0, 0.7)
		.lsp-form-error-mess
			display: none;
			background: transparent;
			line-height: 1em;
			color: #f00;
			padding: 4px 0;
			font-size: 13px;
			width: 100%
			text-align: left
		.lsp-js-submit
			@extend .btn--md
			@extend .btn--mark
			width: 100%
			margin-top: 20px


.header-menu
	f()
	.lsp-block-menu-tree
		padding: 0
		margin: 0
		flex(between)
		padding: 15px 0 20px 0
		width: 100%
	li
		list-style none
		@extend .type--md

.lsp-block-tags-filter
	display: none

//list items
.jstore-page-category-root
	h1,h2
		color black
		padding: 0
		margin: 0
		margin-bottom: 50px

.item-param
	margin-top: auto
	fieldset
		padding: 0
		margin: 0
		border 0
	legend
		display: none
	.lsp-js-type-modifer-group-items
		f()
		width: 100%
		border 1px solid $border-color
		border-radius 10px
		overflow: hidden
	.lsp-type-modifier-item
		flex-grow 1
		text-align: center
		&:hover
			cursor pointer
	.lsp-button
		padding: 15px 10px
		display: inline-block
		width: 100%
		&:hover
			background: #fbfbfc
	.lsp-button-red
		background: #ebebf2
		tr(all)

