//order form

#lsp-block-order-form
	.label-row-text
		display: none!important
	input[type=radio]
		background: #fff
		border-radius: 50%
		size 30px
		color: #000
		font-size: 15px
		box-shadow: 0 0 0px 1px #d0cbcb
		border: 11px solid #fff
		-webkit-appearance: none
		display: inline-block
		margin-right: 15px
		vertical-align: middle
		padding: 0
		&:checked
			border:7px solid #fff
			background $red
			box-shadow: 0 0 0 1px $red
	.lsp-js-form-field-delivery_type
		input[type=radio]
			display: none!important
	.label-row-field
		display: block
	.lsp-order-paymenttype-label
		f()
		align-items: center
		margin-bottom: 20px
	.lsp-js-delivery-type-cont-delivery
		f()
		fw()
		justify-content: space-between
	.label-row-text
		display: none
	.lsp-js-form-field-delivery_city
		width: 100%
	.lsp-js-form-field-delivery_street
		width: 100%
	.lsp-js-form-field-delivery_date
		width: 100%
	.label-row.label-row-half
		+below(480px)
			width: 48%
		width: 32%
	.lsp-js-form-field-message
		textarea
			@extend .input
			width: 100%
	.lsp-order-paymenttype-variant-CASH
		flex(between)
		.lsp-order-paymenttype-variant-fields
			width: 50%
	.lsp-js-form-field-delivery_type
		.full-row
			f()
			input:checked + span
				border-bottom:3px solid $red
				color:#000
			span
				+below(480px)
					font-size: 10px
				font-size:15px
				text-transform:uppercase
				color:#a3a3a3
				border-bottom:3px solid #e0d9d2
				display:block
				text-align:center
				padding: 20px 10px
			label
				width:50%
				padding:0
				display:inline-block
				margin-bottom:20px
				cursor:pointer
	select.jstore-tag
		width: 100%
		padding: 18px 15px
		border 1px solid #d7d7da
		border-radius 10px
		outline none!important
		background: #f5f5f8
	input[type=checkbox]
