//popups
#lsp-block-popup
	position: absolute
	width: 100%
	height: 100vh
	top 0
	left 0
	z-index 1000
	overflow-y scroll
	min-height 200px
	padding: 50px 0
	.lsp-popup-placeholder
		background: $dark
		width: 100%;
		height: 100%;
		position: fixed;
		top: 0;
		left: 0;
		z-index: 999;
		cursor: pointer;
		opacity: .8
	h1
		@extend .type--xl
		color black
		margin-top: 0
		margin-bottom: 20px
	.lsp-popup-cont
		position: absolute;
		top: 150px;
		width: 450px
		background: #FFF;
		z-index: 1000;
		left: 50%;
		transform translateX(-50%)
		padding: 30px 20px
		box-shadow: 0 16px 24px rgba(0, 0, 0, 0.16);
		border-radius 10px
	.lsp-popup-cross
		background: url("../img/close-fat.svg") no-repeat center center transparent;
		width: 19px;
		height: 19px;
		position: absolute;
		top: -40px
		right: 0
		cursor: pointer;


.jstore-tag
	.lsp-form
		font-size: 13px;
		margin: 0 0 20px 0;
		.label-row
			display: block;
			margin-bottom: 20px
		.label-row-text
			@extend .type--lg
			font-size: 14px
			color black
			margin-bottom: 10px
			display: inline-block
		.label-row-field
			input
				@extend .input
				width: 100%
			a.jstore-tag
				text-decoration: underline
				color rgba(0, 0, 0, 0.7)
		.lsp-form-error-mess
			display: none;
			background: transparent;
			line-height: 1em;
			color: #f00;
			padding: 4px 0;
			font-size: 13px;
			width: 100%
			text-align: left
		.lsp-js-submit
			@extend .btn--md
			@extend .btn--mark
			width: 100%
			margin-top: 20px


