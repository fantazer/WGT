//popups
#lsp-block-popup
	position: fixed!important
	width: 100%
	height: 100vh
	top 0
	left 0
	z-index 1000
	overflow-y scroll
	min-height 200px
	padding: 50px 0
	background: rgba(57, 63, 78, 0.81)
	.lsp-popup-placeholder
		background: $dark
		width: 100%;
		height: 100%;
		position: fixed;
		top: 0;
		left: 0;
		z-index: 999;
		cursor: pointer;
		opacity: .8
		display: none
	h1
		@extend .type--xl
		color black
		margin-top: 0
		margin-bottom: 20px
	.lsp-popup-cont
		+below(640px)
			width: 100%
		position: absolute;
		top: 150px!important;
		width: 450px
		background: #FFF;
		z-index: 1000;
		left: 50%;
		transform translateX(-50%)
		padding: 30px 20px
		box-shadow: 0 16px 24px rgba(0, 0, 0, 0.16);
		border-radius 10px
		margin-bottom: 100px
	.lsp-popup-cross
		+below(640px)
			background-color: white
			opacity:1
			padding: 4px
			round()
			size 20px
			background-size: 50%
			top 10px
			right: 10px
			bsh()
		background: url("../img/close-fat.svg") no-repeat center center transparent;
		size: 15px
		position: absolute;
		top: 20px
		right: 20px
		cursor: pointer;
		opacity:.3
		tr(all)
		&:hover
			opacity:1



